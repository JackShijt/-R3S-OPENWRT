# OpenWRT .config
CONFIG_TARGET_armvirt=y
CONFIG_TARGET_armvirt_default=y
CONFIG_TARGET_subtarget="generic"
CONFIG_TARGET_PROFILE="friendlyarm_r3s"

# 无线驱动
CONFIG_PACKAGE_kmod-ath10k=y
CONFIG_PACKAGE_kmod-ath9k=y
CONFIG_PACKAGE_kmod-mt76=y

# 基本网络工具
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_openwrt-keyring=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_wpad-basic=y

# 常用软件包
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-openvpn=y
CONFIG_PACKAGE_luci-app-sqm=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_vnstat=y

# 代理和广告拦截工具
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-adbyby=y
CONFIG_PACKAGE_passwall=y
CONFIG_PACKAGE_adbyby=y

# 其他实用工具
CONFIG_PACKAGE_autoreboot=y
CONFIG_PACKAGE_tc=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_iperf3=y

# 启用 USB 支持
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y

# 额外选项
CONFIG_DEBIAN_VERSION="10"
CONFIG_DEBUG=y
